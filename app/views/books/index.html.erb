<%= render "info", user: @user %>

<h2>Books</h2>
<table class = "table">
  <thead>
   <tr>
    <th></th>
    <th>本のタイトル</th>
    <th>感想</th>
    <th colspan="3"></th>
   </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= image_tag book.user.get_profile_image(100,100) %></td>
      <%= link_to"", book_path(params_id) do %>
      <td><%= book.title %></td>
      <% end %>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>