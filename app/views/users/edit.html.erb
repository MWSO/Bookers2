<div class="container">
 <div class="row">
  <div class="mx-auto">
    <h2>User info</h2>

    <% if @user.errors.any? %>
     <%= @user.errors.count %>errors
     <ul>
       <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
     </ul>
     <% end %>

    <%= form_with model: @user do |f| %>
     <div class="form-group">
      <label for ="inputName">Name</label><br>
      <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>
     </div>
     <div class="form-group">
      <label for"inputImage">Image</label><br>
      <%= f.file_field :profile_image, placeholder: "画像", accept: "image/*" %>
     </div>
     <div class="form-group">
      <lebel for"inputIntroduction">Introduction</lebel><br>
      <%= f.text_area :introduction, placeholder: "自己紹介" %>
     </div>
     <div class="form-group">
      <%= f.submit "Update User", class: "btn btn-secondary" %>
     </div>
      <% end %>
  </div>
 </div>
</div>