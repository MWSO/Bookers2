<h2>User info</h2>
<div>
  <%= image_tag user.get_profile_image(100,100) %>
  <table class = "table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <% if user == current_user %>
  <%= link_to"edit", edit_user_path(current_user.id) %>
  <% end %>
</div>

<h2>New Book</h2>

<%= form_with model: book do |f| %>
 <label>本のタイトル</label>
 <%= f.text_field :title %>
 <label>感想</label>
 <%= f.text_area :body %>
 <%= f.submit "Create Book" %>
<% end %>