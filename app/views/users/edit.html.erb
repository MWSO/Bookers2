<h2>User info</h2>

<% if @user.errors.any? %>
 <%= @user.errors.count %>errors
 <ul>
   <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
 </ul>
 <% end %>

<%= form_with model: @user do |f| %>
 <label for ="inputName">Name</label>
 <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>
 <label for"inputImage">Image</label>
 <%= f.file_field :profile_image, placeholder: "画像", accept: "image/*" %>
 <lebel for"inputIntroduction">Introduction</lebel>
 <%= f.text_area :introduction, placeholder: "自己紹介" %>
 <%= f.submit "Update User" %>
 <% end %>